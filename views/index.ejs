<script type="text/javascript">
  $(window).load(function() {
  	// Prevent dragging img
  	$('#hero img').on('dragstart', function(event) { 
  		event.preventDefault(); 
  	});
  	var elem = document.getElementById('hero');
		window.mySwipe = Swipe(elem, {
		  startSlide: 0,
		  speed: 600,
		  auto: 4000,
		  continuous: true,
		  disableScroll: true,
		  stopPropagation: true
		});
  	// Slide to anchor links
	  $('a').click(function() {
	    var elementClicked = $(this).attr("href");
	    if (elementClicked.substring(0, 1) === "#") {
		    var destination = $(elementClicked).offset().top;
		    $("html:not(:animated),body:not(:animated)").animate(
		    	{ 
		    		scrollTop: destination-15
		    	}, 500 );
		    return false;
		  }
		});
		// Replace svg with png for old browsers
		if(!Modernizr.svg) {
	    $('img[src*="svg"]').attr('src', function() {
	      return $(this).attr('src').replace('.svg', '.png');
	    });
		}
	});
</script>
